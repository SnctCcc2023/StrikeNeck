<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="strikeneck.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:strikeneck"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="統計"
        ContentTemplate="{DataTemplate local:Stats}"
        Route="Stats" />

    <ShellContent
        Title="設定"
        ContentTemplate="{DataTemplate local:Settings}"
        Route="Settings" />

    <ShellContent
        Title="初期設定1"
        ContentTemplate="{DataTemplate local:Init.Init1}"
        Route="Init1" />

    <ShellContent
        Title="初期設定2"
        ContentTemplate="{DataTemplate local:Init.Init2}"
        Route="Init2" />

    <ShellContent
        Title="初期設定3"
        ContentTemplate="{DataTemplate local:Init.Init3}"
        Route="Init3" />
</Shell>
